	<!--Sensor Joints-->	
	<!--Camera Joint-->
	<joint type="fixed" name="camera_hinge">
    <origin xyz="0.1 0 0" rpy="0 0 0"/>
    <child link="camera"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

	<!--Hokuyo Joint
  <joint type="fixed" name="hokuyo_hinge">
    <origin xyz=".05 0 .042" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
-->	

</robot>
