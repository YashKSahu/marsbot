    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://marsbot/meshes/hokuyo.dae" />
				
      </geometry>
    </visual>
    
  </link>
