<?xml version='1.0'?>

<robot name="marsbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <link name="robot_footprint"></link>

  <xacro:include filename="$(find marsbot)/urdf/marsbot.gazebo" />



  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".2 .25 .03"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".2 .25 .03"/>
      </geometry>
    </visual>

	<!--caster wheel-->
    <collision name='front_caster_collision'>
      <origin xyz="0.07 0 -0.011" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.07 0 -0.011" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </visual>

  </link>
	<gazebo reference="chassis">
    <material>Gazebo/Blue</material>
  </gazebo>

  
  <!--Left wheel-->
  <link name="left_wheel">
  	<inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </visual>
    
  </link>
	<gazebo reference="left_wheel">
    <material>Gazebo/Green</material>
  </gazebo>
  
  <!--Right wheel-->
  <link name="right_wheel">
  	<inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 -1.5707"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
    
    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 -1.5707"/> 
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 -1.5707"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </visual>
    
  </link>
	<gazebo reference="right_wheel">
    <material>Gazebo/Green</material>
  </gazebo>

	<!--Joints-->
	
	<!--Left wheel Joint-->
  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="-0.05 0.14 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>
  
  <!--Right wheel Joint-->
  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="-0.05 -0.14 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

	<!--Sensor Links-->
	
	<!--Camera Link-->
  <link name="camera">
  	<inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>
    
    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
    </visual>
    
  </link>
	<gazebo reference="camera">
    <material>Gazebo/Red</material>
  </gazebo>

